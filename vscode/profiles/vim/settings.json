{
  "files.autoSave": "onWindowChange",
  "editor.fontSize": 17,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.wordWrap": "off",
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.renderLineHighlight": "none",
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.cursorSurroundingLines": 10,
  "editor.formatOnSave": true,
  "editor.guides.indentation": false,
  "editor.tabSize": 4,

  // Vim plugin settings
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.neovimUseConfigFile": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.easymotion": true,
  "vim.leader": "<space>",
  "vim.localleader": "\\",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  // Neovim plugin and LazyVim settings
  "vim.autoformat": true,
  "vim.snacks_animate": true,
  "vim.lazyvim_picker": "auto",
  "vim.lazyvim_cmp": "auto",
  "vim.ai_cmp": true,
  "vim.root_spec": ["lsp", [".git", "lua"], "cwd"],
  "vim.root_lsp_ignore": ["copilot"],
  "vim.deprecation_warnings": false,
  "vim.trouble_lualine": true,

  // Neovim Options (translate vim.opt settings)
  "vim.autowrite": true,
  "vim.clipboard": "unnamedplus",
  "vim.completeopt": "menu,menuone,noselect",
  "vim.conceallevel": 2,
  "vim.confirm": true,
  "vim.cursorline": true,
  "vim.expandtab": true,
  "vim.fillchars": {
    "foldopen": "",
    "foldclose": "",
    "fold": " ",
    "foldsep": " ",
    "diff": "╱",
    "eob": " "
  },
  "vim.foldlevel": 99,
  "vim.formatoptions": "jcroqlnt",
  "vim.grepformat": "%f:%l:%c:%m",
  "vim.grepprg": "rg --vimgrep",
  "vim.ignorecase": true,
  "vim.inccommand": "nosplit",
  "vim.jumpoptions": "view",
  "vim.laststatus": 3,
  "vim.linebreak": true,
  "vim.list": true,
  "vim.mouse": "a",
  "vim.number": true,
  "vim.pumblend": 10,
  "vim.pumheight": 10,
  "vim.relativenumber": true,
  "vim.scrolloff": 4,
  "vim.sessionoptions": [
    "buffers",
    "curdir",
    "tabpages",
    "winsize",
    "help",
    "globals",
    "skiprtp",
    "folds"
  ],
  "vim.shiftround": true,
  "vim.shiftwidth": 2,
  "vim.shortmess": { "W": true, "I": true, "c": true, "C": true },
  "vim.showmode": false,
  "vim.sidescrolloff": 8,
  "vim.signcolumn": "yes",
  "vim.smartcase": true,
  "vim.smartindent": true,
  "vim.spelllang": ["en"],
  "vim.splitbelow": true,
  "vim.splitkeep": "screen",
  "vim.splitright": true,
  "vim.statuscolumn": "v:lua.require'snacks.statuscolumn'.get()",
  "vim.tabstop": 2,
  "vim.termguicolors": true,
  "vim.timeoutlen": 1000,
  "vim.undofile": true,
  "vim.undolevels": 10000,
  "vim.updatetime": 200,
  "vim.virtualedit": "block",
  "vim.wildmode": "longest:full,full",
  "vim.winminwidth": 5,
  "vim.wrap": false,

  // Keybindings
  "vim.keybindings": [
    { "key": "space f f", "command": "workbench.action.quickOpen" },
    { "key": "space f r", "command": "workbench.action.openRecent" },
    { "key": "space /", "command": "workbench.action.findInFiles" },
    { "key": "space w", "command": "workbench.action.files.save" },
    { "key": "space q", "command": "workbench.action.closeWindow" },
    { "key": "space x", "command": "workbench.action.closeActiveEditor" },
    { "key": "space n", "command": "workbench.action.terminal.toggleTerminal" },
    { "key": "space l", "command": "workbench.action.nextEditor" },
    { "key": "space h", "command": "workbench.action.previousEditor" },
    { "key": "space u", "command": "workbench.view.explorer" },
    { "key": "space b d", "command": "workbench.action.closeActiveEditor" },
    { "key": "space b a", "command": "workbench.action.closeAllEditors" },
    { "key": "space s v", "command": "workbench.action.splitEditorRight" },
    { "key": "space c s", "command": "workbench.action.openSettings" },
    { "key": "space f m", "command": "editor.action.formatDocument" },
    { "key": "C-s", "command": "workbench.action.files.save" }, // Save file (Ctrl+s)
    { "key": "C-h", "command": "workbench.action.navigateBack" }, // Move to the Left Window (Ctrl+h)
    { "key": "C-j", "command": "workbench.action.navigateDown" }, // Move to the Lower Window (Ctrl+j)
    { "key": "C-k", "command": "workbench.action.navigateUp" }, // Move to the Upper Window (Ctrl+k)
    { "key": "C-l", "command": "workbench.action.navigateForward" }, // Move to the Right Window (Ctrl+l)
    { "key": "A-j", "command": "editor.action.moveLinesDownAction" }, // Move line down (Alt+j)
    { "key": "A-k", "command": "editor.action.moveLinesUpAction" }, // Move line up (Alt+k)
    { "key": "shift+alt+down", "command": "editor.action.moveLinesDownAction" }, // Move line down (Alt+Down)
    { "key": "shift+alt+up", "command": "editor.action.moveLinesUpAction" }, // Move line up (Alt+Up)
    { "key": "C-s", "command": "editor.action.save" } // Save File (Ctrl+s)
  ]
}
